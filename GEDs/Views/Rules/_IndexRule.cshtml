@model IEnumerable<Entities.Models.RuleBase>

<table class="selection hover overflow">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegularExpression)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RuleActionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReplaceValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReplaceColumn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegularExpression)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RuleActionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReplaceValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReplaceColumn)
        </td>
        <td>
            @if(User.IsInRole(System.Web.Configuration.WebConfigurationManager.AppSettings["AdminDomainGroup"])) {
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) @("|")
                @Html.ActionLink("Details", "Details", new { id=item.Id }) @("|")
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
